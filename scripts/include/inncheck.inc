use uo;
use os;
use cfgfile;
use util;

//--------------------------------------------------------------------------------

const DEF_INN_Z_RANGE   := 10;

//--------------------------------------------------------------------------------

function Inncheck(who)

  var foundInn := 0;

  foreach mob in ListMobilesNearLocation( who.x, who.y, who.z, DEF_INN_Z_RANGE, who.realm )
  
	if(mob.npctemplate == "barmaid" || mob.npctemplate == "innkeeper")
		foundInn := 1;
		break;
	endif
	
  endforeach

  return foundInn;


endfunction 

